generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  @@map("categories")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  category  String
  image     String
  excerpt   String   @db.Text
  content   String   @db.Text
  creator   String?
  years     String?
  rating    Float    @default(0)
  date      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("posts")
}
