generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String     @id @default(cuid())
  email      String     @unique
  name       String
  password   String
  createdAt  DateTime   @default(now())
  posts      Post[]
  categories Category[]

  @@map("users")
}

model Category {
  id        String   @id @default(cuid())
  name      String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("categories")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  category  String
  image     String
  excerpt   String   @db.Text
  content   String   @db.Text
  creator   String?
  years     String?
  rating    Float    @default(0)
  status    String?
  date      String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("posts")
}
